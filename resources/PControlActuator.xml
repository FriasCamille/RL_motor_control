<mujoco model="pendulum_position_P">
    <compiler angle="radian"/>
    <option gravity="0 0 -9.81" timestep="0.001"/>

    <worldbody>
        <body name="base" pos="0 0 0">
            <body name="pendulum" pos="0 0 0">
                <joint 
                    name="hinge"
                    type="hinge"
                    axis="0 1 0"
                    limited="false"
                />
                <geom 
                    type="capsule"
                    fromto="0 0 0 0 0 -1"
                    size="0.05"
                    mass="1.0"
                />
            </body>
        </body>
    </worldbody>

    <actuator>
        <!-- Control P: torque = kp * (q_ref - q) -->
        <position
            name="pos_P"
            joint="hinge"
            kp="5"
            ctrlrange="-3.14 3.14"
        />
    </actuator>
</mujoco>
